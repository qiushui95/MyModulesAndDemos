<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorTransparent</item>
    </style>

    <style name="styleHomeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="bl_unPressed_textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="bl_corners_radius">5dp</item>
        <item name="bl_pressed_textColor">#ff0000</item>
        <item name="bl_stroke_color">#000000</item>
        <item name="bl_stroke_width">1dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="stylePreviewTopImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintWidth_max">100dp</item>
        <item name="layout_constraintWidth_percent">0.25</item>
    </style>

</resources>
